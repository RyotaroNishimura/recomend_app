<% provide(:title, "本の情報の編集") %>
<div class="container zentai">
  <h1 class="login">本の編集</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 section">
      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class = 'form-group'>
          <%= f.label :タイトル %> <span class="input-need">※必須</span>
          <%= f.text_field :title, class: 'form-control', id: 'post_title' %>
        </div>

        <div class = 'form-group'>
          <%= f.label :値段 %>  <span class="input-unneed">※任意</span>
          <%= f.text_field :price, class: 'form-control', id: 'post_price' %>
        </div>

        <div class = 'form-group'>
          <%= f.label :人気度 %> [1-5] <span class="input-unneed">※任意</span>
          <%= f.text_field :popularity, class: 'form-control', id: 'post_popularity' %>
        </div>

        <div class = 'form-group'>
          <%= f.label :詳細 %> <span class="input-unneed">※任意</span>
          <%= f.text_field :content, size: "30x4", class: 'form-control', id: 'post_content' %>
        </div>

        <%= f.submit "更新する", class: "btn login-login" %>
        <p></p>

        <div class="ac-donhave">
          <%= link_to "投稿を削除する", post_path(@post), method: :delete, data: { confirm: "この投稿を削除してよろしいですか？" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
