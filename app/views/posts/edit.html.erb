<% provide(:title, "本の情報の編集") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class = 'form-group'>
        <%= f.label :title %> <span class="input-need">※必須</span>
        <%= f.text_field :title, class: 'form-control', id: 'post_title' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :category %><span class="input-unneed">※任意</span>
        <%= f.text_field :category, size: "60x4", class: 'form-control', id: 'post_category' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :price %>  <span class="input-unneed">※任意</span>
        <%= f.text_field :price, class: 'form-control', id: 'post_price' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :popularity %> [1~5] <span class="input-unneed">※任意</span>
        <%= f.text_field :popularity, class: 'form-control', id: 'post_popularity' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :content %> <span class="input-unneed">※任意</span>
        <%= f.text_field :content, size: "30x4", class: 'form-control', id: 'post_content' %>
      </div>
      <%= f.submit "更新する", class: "btn btn-primary" %>
      <p></p>
      <%= link_to "料理を削除する", post_path(@post), method: :delete,
                             data: { confirm: "この投稿を削除してよろしいですか？" } %>
    <% end %>
  </div>
</div>
