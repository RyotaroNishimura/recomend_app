<div class="row">
  <aside class="col-md-4">
    <h1><%= @user.name %></h1>
    <span><%= link_to "プロフィール", @user %></span>
    <span><b>投稿</b><%= @user.posts.count %></span>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
