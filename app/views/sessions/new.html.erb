<div class="container">
  <h1 class="login">ログイン</h1>
  <div class= "row">
    <div class= "col-md-6 col-md-offset-3">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class:'form-control', id: 'user_email' %>

        <%= f.label :パスワード %>
        <%= f.password_field :password, class:'form-control', id: 'user_password' %>

        <%= f.submit "ログイン", class: "btn login-login" %>

        <div class="login-mama">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログインしたままにする</span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="ac-donhave">
      <%= link_to "アカウントをお持ちでない方はこちら", signup_path %>
    </div>
  </div>
</div>
