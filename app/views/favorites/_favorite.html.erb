<% @post = Post.find(favorite.post_id) %>
<% user = @post.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-post">
    <div class="col-md-2">
    </div>
    <div class="col-md-7">
      <p><%= link_to @post.title, post_path(@post) %></p>
      <p><%= @post.content %></p>
      <p class="book-user">投稿者 <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>
